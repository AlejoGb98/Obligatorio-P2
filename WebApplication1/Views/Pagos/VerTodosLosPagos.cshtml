@using System.Globalization
@using Classes;

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    <h2>Pagos de Miembros del Equipo</h2>
    
    <div class="my-4">
        <p>Ingresar Mes y AÃ±o para ver pagos correspondientes</p>
        
        <form method="post" class="d-flex gap-3">
            <select name="mesPago">
                @for (int i = 1; i <= 12; i++)
                {
                    <option value=@i>@CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                }
            </select>
            <select name="anoPago">
                @for (int i = DateTime.Today.Year; i >= 2010; i--)
                {
                    <option value=@i>@i</option>
                }
            </select>
            
            <button type="submit" class="btn-primary rounded-2">Ingresar</button>
        </form>
    </div>
    
    @if(ViewBag.Pagos.Count <= 0)
    {
        <p>No existen pagos para mostrar.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <th>Usuario</th>
                <th>Equipo</th>
                <th>Tipo Pago</th>
                <th>Fecha Pago</th>
                <th>Tipo de Gasto</th>
                <th>Metodo de Pago</th>
                <th>Descripcion</th>
                <th>Monto Pago</th>
                <th>Monto con %</th>
            </thead>
            <tbody>
            @foreach (Pago pago in ViewBag.Pagos)
            {
                <tr>
                    <td>@pago.Usuario.Email</td>
                    <td>@pago.Usuario.Equipo.NombreEquipo</td>
                    <td>@pago.TipoPago()</td>
                    <td>@pago.FechaDePago().ToString("d")</td>
                    <td>@pago.TipoGasto.Nombre</td>
                    <td>@pago.MetodoPago</td>
                    <td>@pago.Descripcion</td>
                    <td>$ @pago.CalcularMontoPago().ToString("0.00")</td>
                    <td>$ @pago.CalcularPromocion().ToString("0.00")</td>
                </tr>
            }
            </tbody>
        </table>
    }
    
</div>
</body>
</html>