@using Classes;

<!DOCTYPE html>

<html>
<head>
    <title>RIBUK - Agregar Pago</title>
</head>
<body>
<div>
    <h2>Agregar Nuevo Pago Recurrente</h2>
    <form method="post" class="d-grid gap-3 w-75 justify-content-center">
        
        <div class="d-grid gap-1">
            <label>Seleccionar Tipo de Gasto</label>
            <select name="tipoGasto" required>
                <option>-- Seleccionar --</option>
                @foreach (TipoGasto tipo in ViewBag.TiposDeGasto)
                {
                    <option value=@tipo.Nombre>@tipo.Nombre</option>
                }
            </select>
        </div>
        
        <div class="d-grid gap-1">
            <label>Descripci√≥n</label>
            <input type="text" name="descr" required/>
        </div>
        
        <div class="d-grid gap-1">
            <label>Monto Pago</label>
            <input type="text" name="montoPago" required/>
        </div>
        
        <div class="d-grid gap-1">
            <label>Fecha Desde</label>
            <input type="date" name="fechaDesde" required/>
        </div>
        
        <div class="d-grid gap-1">
            <label>Fecha Hasta</label>
            <input type="date" name="fechaHasta"/>
        </div>
        
        <div class="d-flex gap-2">
            <input type="checkbox" name="limite" value="true" class="w-25 h-auto"/>
            <label>Pago con Limite</label>
        </div>
        
        <input class="btn-primary" type="submit" value="Agregar Pago"/>
    </form>
</div>
</body>
</html>